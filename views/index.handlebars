<h1>Burger App</h1>

<p>Manage quotes with this app</p>
<section class="row">
    <section class="col-md-8">
        {{#each burgers}}
        {{#unless devoured}}
        <section class="row">
            <section class="col-md-8">
                <div class="card uneaten-burgers">
                    <div class="card-body">{{burger_name}}</div>
                </div>
            </section>

            <section class="col-md-4">
                <button data-id="{{this.id}}" class="btn btn-primary float-left devour-burger-btn">Devour</button>
            </section>
        </section>
        {{/unless}}
        {{/each}}
    </section>
    <section class="col-md-4">
        <div class="card" id="devoured-burgers">
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </section>
</section>
<section class="row">
    <section class="col-md-4">
    </section>
    <section class="col-md-4">
        <div id="form-entry">

            <h2>Add a Burger</h2>

            <form id="create-form">

                <div class="form-group">
                    <label for="burger-type">New Burger</label>
                    <textarea id="burger-type"></textarea>
                </div>

                <button type="submit" id="createBurgerBtn" class="btn btn-primary">Add Burger</button>
            </form>
        </div>
    </section>
    <section class="col-md-4">
    </section>
</section>