<h1>Burger App</h1>

<p>Manage quotes with this app</p>

<!-- Pass in data from server.js -->
<ul>
    {{#each burgers}}
    <li>
        <p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">Burger:</span> {{this.burger_name}}</p>
        <p><span class="label">Devour:</span> {{this.devoured}}</p>

        <button data-id="{{this.id}}" class="devourBtn">Devour</button>
    </li>
    {{/each}}
</ul>


<h2>Add a Burger</h2>

<form id="create-form">

    <div class="form-group">
        <label for="burger-type">Burger Type</label>
        <textarea id="burger-type" rows="8" cols="40"></textarea>
    </div>

    <button type="submit">Add Quote</button>
</form>